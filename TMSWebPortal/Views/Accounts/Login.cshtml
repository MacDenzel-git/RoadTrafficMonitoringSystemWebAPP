@model TMSWebPortal.DTO.UserCredentialsDTO

@{
    ViewData["Title"] = "Login";

}

@{
    Layout = "~/Views/Shared/_LayoutBeforeLogin.cshtml";

}


<div class=" container-fluid">
    <div class="row">
        <div class="col-md-12">
  
            <form asp-action="Login">
                 
                            <div class="row">
                                <div class="col-md-4 pt-0 mb-0">
                                </div>
                                <div class="col-md-4 pt-0 mb-0">
                                        <div class="card pb-0 mt-2 mb-0">
                                            <div class="card-body pt-0 mb-0  col-md-12">

                                                <br />
                                                @if (Model.IsErrorOccured)
                                                {
                                                    <h6 class="h6-title text-danger">@Model.Message</h6>
                                                }
                                                <div class="row">
                                                    <div class="col-lg-12 text-center"><h4 class="h4-title font-weight-bold">Sign In To Your Account</h4></div>

                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class=" text-center">

                                                            <img src="~/images/logo.png" alt="John Doe" />

                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class=" ">Email</label>
                                                    <input asp-for="Username" type="text" class="form-control" required>
                                                    <span asp-validation-for="Username" class="text-danger"></span>


                                                </div>
                                                <div class="form-group">
                                                    <label class=" ">Enter Password</label>
                                                    <input asp-for="Password" type="password" class="form-control" id="txtPinNumber" required>
                                                    <span asp-validation-for="Password" class="text-danger"></span>

                                                </div>
                                                <div class="row ">
                                                    <div class="col-lg-12 text-center">
                                                        <button style="background-color: #003196;color: #ffaa25;font-weight: bold;" type="submit" class="btn btn-raised btn-primary text-center">Login</button>

                                                    </div>
                                                </div>
                                                <div class="row">
                
                                                    <div class="col-md-pull-4 text-right">
                                                        <a style="color: #003196;font-style: inherit;font-weight: bold;" asp-controller="PasswordRecover" asp-action="ResetPassword">Reset Password</a>

                                                    </div>
                                                </div>
                                                
                                            </div>
                                        </div>
                               
                                </div>

                                <div class="col-md-4">

                                    <div class="col-md-12 ">
                                        @*<img src="~/assets/images/CSAE.jpg" />*@
                                    </div>



                                </div>
                            </div>
                        

            </form>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>