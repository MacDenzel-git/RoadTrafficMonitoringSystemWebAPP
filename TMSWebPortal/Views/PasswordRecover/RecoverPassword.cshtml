@model TMSWebPortal.DTO.RecoverPasswordDTO

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutBeforeLogin.cshtml";
}

 
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card card-profile">
            <div class="card-body">
                <div class="row mt-0">
                    @* I can add something on the side
                    *@
                    <div class="col-md-12">

                        <form asp-controller="PasswordRecover" asp-action="RecoverPassword" method="post">
                            @if (Model.IsErrorOccured)
                            {
                                <h6 class="h4-title text-danger">@Model.Message</h6>
                            }
                            else
                            {
                                if (Model.Message != null)
                                {
                                    <h6 class="h4-title text-success">@Model.Message</h6>
                                }
                            }


                            <p class="card-description">
                                <div asp-validation-summary="All" class="error text-danger"></div>
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <input asp-for="Username" class="form-control" placeholder="Email Address">
                                            <span class="bmd-help">
                                                Please enter your username
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <input asp-for="Otp" type="password" class="form-control " placeholder="Password">
                                            <span class="bmd-help">
                                                Please enter One time Password
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>
                            </p>
                            <button type="submit" class="btn btn-outline-dark">Reset Password</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>

</div>
