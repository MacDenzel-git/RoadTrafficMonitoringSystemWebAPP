@model TMSWebPortal.DTO.LoginViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutBeforeLogin.cshtml";
}
 
<div class="row">

    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card card-profile">
            <div class="card-body">
               

                <div class="row mt-0">
                    @* I can add something on the side
                    *@
                    <div class="col-md-12">

                        <form asp-controller="PasswordRecover" asp-action="ResetPassword" method="post">
                            @if (Model.IsErrorOccured)
                            {
                                <h6 class="h6-title text-danger">@Model.Message</h6>
                            }
                            else
                            {
                                if (Model.Message != null)
                                {
                                    <h6 class="h6-title text-success">@Model.Message</h6>
                                }
                            }
                            <h6 class="card-category text-gray">LOGIN</h6>
                            <h4 class="card-title">Please enter your Email</h4>

                            <div class="form-group">
                                <label class="bmd-label-floating">Email</label>
                                <input asp-for="Username" type="text" class="form-control" required>
                                <span asp-validation-for="Username" class="text-danger"></span>


                            </div>

                            <button type="submit" class="btn btn-outline-dark">Proceed</button>
                        </form>
                        <hr />
                        <a asp-action="RecoverPassword" class="text-danger"> <strong>OR</strong> Login with One Time Pin</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>
