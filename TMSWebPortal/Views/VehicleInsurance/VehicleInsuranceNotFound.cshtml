
@model TMSWebPortal.Models.OutputHandler

@{
    ViewData["Title"] = "CrimeCommittedPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-1 mb-4">
    </div>

    <div class="col-md-10 mb-4">
        <div class="outer-div">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="h4-title text-center font-weight-bold">   Vehicle Insurance check Response</h4>
                </div>

                <div class="card-body col-md-12">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead class="index-thead">
                            <tr>
                                <th class="btn-column-hdr-60">ID</th>
                                <th>Message</th>
                                <th class="btn-column-hdr-150"></th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>Response: @Html.DisplayFor(modelItem => modelItem.Message)</td>
                                <td>Registration Number:@Html.DisplayFor(modelItem => modelItem.Identifier)</td>

                            </tr>

                        </tbody>
                    </table>

                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <a class="btn btn-raised btn-success" asp-action="Index" asp-controller="Home">Home</a>

                        <a class="btn btn-raised btn-success btn-sm waves-float" asp-action="GetCrimes" asp-controller="Crimes" asp-route-checkType="V" asp-route-id="@Model.Identifier">
                            Get Crimes
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1 mb-4">
    </div>
</div>

